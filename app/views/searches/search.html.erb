 <!--検索対象モデルがUserの時 -->
   <% if @range == "User" %>
  <table class='table table-hover table-inverse'>
    <h2>Users search for "<%= params[:word]%>"</h2>
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th></th>
      <th colspan="3"></th>
    </tr>
  </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= image_tag user.get_profile_image, size: '50x50' %></td>
          <td><%= user.name %></td>
        </tr>
      <% end %>
    </tbody>
  <% else %>
  </table>
    <!--検索対象モデルがUserではない時(= 検索対象モデルがBookの時) -->
<table class='table table-hover table-inverse'>
  <h2>Books search for "<%= params[:word]%>"</h2>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>
    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td>
          <%= image_tag book.user.get_profile_image, size:'50x50' %>
          <td><%= book.title %></td>
          <td><%= book.body %></td>
        </tr>
      <% end %>
    </tbody>
  <% end %>
</table>